    <script>
      // Import npm modules.
      import Splide from '@splidejs/splide';
      import '@splidejs/splide/css';  // Default theme
      // Import custom scripts
      import "../scripts/script.js";

      // Make sure change the default media query when only mount that into slider
      // on mobile devices.
      document.addEventListener( 'DOMContentLoaded', function() {
        var splide = new Splide( '.splide', {
          gap    : '2rem',
          perPage: 1,
          lazyLoad: 'nearby',
          arrows: false,
          mediaQuery: 'min',
          breakpoints: {
            // 1024: {
            //   destroy: true,
            // },
            767: {
              perPage: 3,
            },
            480: {
              perPage: 1,
            }
